%tr
  %td= subject_item.title
  %td= subject_item.decorate.teacher_full_name
  %td
    = link_to subject_item_path(subject_item), {title: t('shared.show')} do
      %button.btn.btn-primary
        =fa_icon "search"
    = link_to edit_subject_item_path(subject_item), {title: t('shared.edit')} do
      %button.btn.btn-primary
        =fa_icon "edit"
    = link_to subject_item_path(subject_item), {method: :delete, title: t('shared.delete'), data: {confirm: "Are you sure?"}} do
      %button.btn.btn-primary
        =fa_icon "times"


